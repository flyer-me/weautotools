<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flyerme.weautotools.repository.UserRepository">

    <select id="findByUsername" resultType="com.flyerme.weautotools.entity.User">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <select id="findById" resultType="com.flyerme.weautotools.entity.User">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, password, roles) VALUES (#{username}, #{password}, #{roles})
    </insert>

</mapper>
