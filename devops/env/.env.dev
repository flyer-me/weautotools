# WeAutoTools 开发环境配置

# 应用配置
APP_NAME=weautotools-backend
APP_VERSION=1.0.0
APP_PROFILE=dev

# 服务器配置
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weautotools
DB_USERNAME=weautotools
DB_PASSWORD=weautotools123

# 日志配置
LOG_LEVEL=debug

# JVM配置
JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC

# 监控配置
MANAGEMENT_ENDPOINTS=health,info,metrics

# 开发环境特定配置
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_DDL_AUTO=update
