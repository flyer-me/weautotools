# WeAutoTools 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置值

# 应用配置
APP_NAME=weautotools-backend
APP_VERSION=1.0.0
APP_PROFILE=dev

# 服务器配置
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weautotools
DB_USERNAME=weautotools
DB_PASSWORD=weautotools123

# 数据库连接池配置（可选）
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20

# 日志配置
LOG_LEVEL=debug
LOG_FILE_PATH=logs/weautotools-backend.log

# JVM配置
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC

# 监控配置
MANAGEMENT_ENDPOINTS=health,info,metrics

# 安全配置（生产环境请修改）
JWT_SECRET=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# 外部服务配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 邮件配置
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
