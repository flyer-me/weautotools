# WeAutoTools 生产环境配置

# 应用配置
APP_NAME=weautotools-backend
APP_VERSION=1.0.0
APP_PROFILE=prod

# 服务器配置
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# 数据库配置（请修改为实际的生产环境配置）
DB_HOST=your-prod-db-host
DB_PORT=5432
DB_NAME=weautotools_prod
DB_USERNAME=weautotools_prod
DB_PASSWORD=your-strong-password-here

# 数据库连接池配置
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=50

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/weautotools/weautotools-backend.log

# JVM配置
JAVA_OPTS=-Xms1024m -Xmx2048m -XX:+UseG1GC -XX:+UseContainerSupport

# 监控配置
MANAGEMENT_ENDPOINTS=health,info

# 生产环境特定配置
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_DDL_AUTO=validate

# 安全配置（请修改为实际的密钥）
JWT_SECRET=your-production-jwt-secret-key-here
ENCRYPTION_KEY=your-production-encryption-key-here
